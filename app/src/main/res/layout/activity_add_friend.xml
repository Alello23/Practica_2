<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/AF_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="49dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undo" />

    <SearchView
        android:id="@+id/AF_searchView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rounded_corners_gray"
        android:queryHint="Buscar"
        app:layout_constraintBottom_toBottomOf="@+id/AF_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/AF_back_button"
        app:layout_constraintTop_toTopOf="@+id/AF_back_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AF_insertUsers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AF_back_button" />


</androidx.constraintlayout.widget.ConstraintLayout>